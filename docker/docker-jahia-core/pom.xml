<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <groupId>org.jahia.server</groupId>
        <artifactId>docker-parent-core</artifactId>
        <version>8.1.6.1</version>
    </parent>
    <artifactId>docker-jahia-core</artifactId>
    <modelVersion>4.0.0</modelVersion>

    <packaging>pom</packaging>

    <properties>
        <image.repo>jahia-core</image.repo>
        <image.repo.classifier>-dev</image.repo.classifier>
        <image.tag>${project.version}</image.tag>
        <image.alias />
        <image.graalvm>false</image.graalvm>
    </properties>

    <repositories>
        <repository>
            <id>jahia-public</id>
            <name>Jahia Public Repository</name>
            <url>https://devtools.jahia.com/nexus/content/groups/public</url>
            <releases>
                <enabled>true</enabled>
                <updatePolicy>never</updatePolicy>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
    </repositories>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>download</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.jahia.server</groupId>
                                    <artifactId>jahia-war</artifactId>
                                    <version>${project.version}</version>
                                    <type>war</type>
                                    <outputDirectory>${project.build.directory}/dependency/jahia-war</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.jahia.server</groupId>
                                    <artifactId>jahia-war</artifactId>
                                    <version>${project.version}</version>
                                    <classifier>data-package</classifier>
                                    <type>zip</type>
                                    <outputDirectory>${project.build.directory}/dependency/jahia-war-data-package
                                    </outputDirectory>
                                </artifactItem>
                                <!-- the following artifacts must be moved from pack to here ! -->

                                <artifactItem>
                                    <groupId>org.jahia.server</groupId>
                                    <artifactId>shared-libraries</artifactId>
                                    <version>${project.version}</version>
                                    <classifier>all</classifier>
                                    <type>zip</type>
                                    <outputDirectory>${project.build.directory}/dependency/shared-libraries
                                    </outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.jahia.server</groupId>
                                    <artifactId>jdbc-drivers</artifactId>
                                    <version>${project.version}</version>
                                    <classifier>all</classifier>
                                    <type>zip</type>
                                    <outputDirectory>${project.build.directory}/dependency/jdbc-drivers
                                    </outputDirectory>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>docker-core-plugin</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>io.fabric8</groupId>
                        <artifactId>docker-maven-plugin</artifactId>
                        <version>0.42.1</version>
                        <executions>
                            <execution>
                                <id>default</id>
                                <goals>
                                    <goal>build</goal>
                                    <goal>push</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <images>
                                <image>
                                    <name>jahia/${image.repo}${image.repo.classifier}:${image.tag}</name>
                                    <build>
                                        <contextDir>${project.basedir}</contextDir>
                                        <buildx>
                                            <builderName>jahia_builder</builderName>
                                            <platforms>
                                                <platform>linux/amd64</platform>
                                                <platform>linux/arm64</platform>
                                            </platforms>
                                        </buildx>
                                        <tags>${image.alias}</tags>
                                        <args>
                                            <JAHIA_PLUGIN>org.jahia.server:jahia-maven-plugin:${jahia.plugin.version}</JAHIA_PLUGIN>
                                            <INSTALL_GRAALVM>${image.graalvm}</INSTALL_GRAALVM>
                                        </args>
                                        <env>
                                            <JAVA_HOME>/opt/java/openjdk</JAVA_HOME>
                                        </env>
                                    </build>
                                </image>
                            </images>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>docker-core-plugin-amd64-only</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>io.fabric8</groupId>
                        <artifactId>docker-maven-plugin</artifactId>
                        <version>0.42.1</version>
                        <executions>
                            <execution>
                                <id>default</id>
                                <goals>
                                    <goal>build</goal>
                                    <goal>push</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <images>
                                <image>
                                    <name>jahia/${image.repo}${image.repo.classifier}:${image.tag}</name>
                                    <build>
                                        <contextDir>${project.basedir}</contextDir>
                                        <tags>${image.alias}</tags>
                                        <args>
                                            <JAHIA_PLUGIN>org.jahia.server:jahia-maven-plugin:${jahia.plugin.version}</JAHIA_PLUGIN>
                                            <INSTALL_GRAALVM>${image.graalvm}</INSTALL_GRAALVM>
                                        </args>
                                        <env>
                                            <JAVA_HOME>/opt/java/openjdk</JAVA_HOME>
                                        </env>
                                    </build>
                                </image>
                            </images>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

</project>
