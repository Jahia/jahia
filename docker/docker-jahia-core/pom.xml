<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <groupId>org.jahia.server</groupId>
        <artifactId>docker-parent-core</artifactId>
        <version>8.2.3.0-SNAPSHOT</version>
    </parent>
    <artifactId>docker-jahia-core</artifactId>
    <modelVersion>4.0.0</modelVersion>

    <packaging>pom</packaging>

    <properties>
        <image.registry>ghcr.io/</image.registry>
        <image.repo>jahia-core</image.repo>
        <image.repo.classifier>-dev</image.repo.classifier>
        <image.tag>${project.version}</image.tag>
        <image.alias />
    </properties>

    <repositories>
        <repository>
            <id>jahia-public</id>
            <name>Jahia Public Repository</name>
            <url>https://devtools.jahia.com/nexus/content/groups/public</url>
            <releases>
                <enabled>true</enabled>
                <updatePolicy>never</updatePolicy>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
    </repositories>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>download-configurator-library</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.jahia.configuration</groupId>
                                    <artifactId>configurators-docker</artifactId>
                                    <version>${jahia.plugin.version}</version>
                                    <classifier>standalone</classifier>
                                    <type>jar</type>
                                    <outputDirectory>${project.build.directory}/configurator</outputDirectory>
                                    <destFileName>configurator.jar</destFileName>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                    <execution>
                        <id>download</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.jahia.server</groupId>
                                    <artifactId>jahia-war</artifactId>
                                    <version>${project.version}</version>
                                    <type>war</type>
                                    <outputDirectory>${project.build.directory}/dependency/jahia-war</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.jahia.server</groupId>
                                    <artifactId>jahia-war</artifactId>
                                    <version>${project.version}</version>
                                    <classifier>data-package</classifier>
                                    <type>zip</type>
                                    <outputDirectory>${project.build.directory}/dependency/jahia-war-data-package
                                    </outputDirectory>
                                </artifactItem>
                                <!-- the following artifacts must be moved from pack to here ! -->

                                <artifactItem>
                                    <groupId>org.jahia.server</groupId>
                                    <artifactId>shared-libraries</artifactId>
                                    <version>${project.version}</version>
                                    <classifier>all</classifier>
                                    <type>zip</type>
                                    <outputDirectory>${project.build.directory}/dependency/shared-libraries
                                    </outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.jahia.server</groupId>
                                    <artifactId>jdbc-drivers</artifactId>
                                    <version>${project.version}</version>
                                    <classifier>all</classifier>
                                    <type>zip</type>
                                    <outputDirectory>${project.build.directory}/dependency/jdbc-drivers
                                    </outputDirectory>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <!-- IMPORTANT:
                 This profile uses buildx to build multi-platform images with ISOLATED build contexts, which does NOT access local images directly.
                 So even if you have a custom Docker image ghcr.io/jahia/jahia-core-dev:8.2.3.0-SNAPSHOT locally, buildx will always pull the one from Docker hub.
                 If you want to build Docker images locally using the cache, use the "docker-core-plugin-dev" profile instead.
             -->
            <id>docker-core-plugin</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>io.fabric8</groupId>
                        <artifactId>docker-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>default</id>
                                <goals>
                                    <goal>build</goal>
                                    <goal>push</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <images>
                                <image>
                                    <name>${image.registry}jahia/${image.repo}${image.repo.classifier}:${image.tag}</name>
                                    <build>
                                        <contextDir>${project.basedir}</contextDir>
                                        <buildx>
                                            <builderName>jahia_builder</builderName>
                                            <platforms>
                                                <platform>linux/amd64</platform>
                                                <platform>linux/arm64</platform>
                                            </platforms>
                                        </buildx>
                                        <tags>${image.alias}</tags>
                                        <args>
                                            <GRAALVM_VERSION>${graalvm.sdk.version}</GRAALVM_VERSION>
                                            <GRAALVM>true</GRAALVM>
                                        </args>
                                    </build>
                                </image>
                            </images>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <!-- IMPORTANT:
                 This profile uses buildx to build multi-platform images with ISOLATED build contexts, which does NOT access local images directly.
                 So even if you have a custom Docker image ghcr.io/jahia/jahia-core-dev:8.2.3.0-SNAPSHOT locally, buildx will always pull the one from Docker hub.
                 If you want to build Docker images locally using the cache, use the "docker-core-plugin-dev" profile instead.
             -->
            <id>docker-core-plugin-amd64-only</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>io.fabric8</groupId>
                        <artifactId>docker-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>default</id>
                                <goals>
                                    <goal>build</goal>
                                    <goal>push</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <images>
                                <image>
                                    <name>${image.registry}jahia/${image.repo}${image.repo.classifier}:${image.tag}</name>
                                    <build>
                                        <contextDir>${project.basedir}</contextDir>
                                        <buildx>
                                            <platforms>
                                                <platform>linux/amd64</platform>
                                            </platforms>
                                        </buildx>
                                        <tags>${image.alias}</tags>
                                        <args>
                                            <GRAALVM_VERSION>${graalvm.sdk.version}</GRAALVM_VERSION>
                                            <GRAALVM>true</GRAALVM>
                                        </args>
                                    </build>
                                </image>
                            </images>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <!-- docker-core-plugin-dev: is just a copy of docker-plugin without buildx conf, so the local Docker cache is used -->
            <id>docker-core-plugin-dev</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>io.fabric8</groupId>
                        <artifactId>docker-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>default</id>
                                <goals>
                                    <goal>build</goal>
                                    <goal>push</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <images>
                                <image>
                                    <name>${image.registry}jahia/${image.repo}${image.repo.classifier}:${image.tag}</name>
                                    <build>
                                        <contextDir>${project.basedir}</contextDir>
                                        <tags>${image.alias}</tags>
                                        <args>
                                            <GRAALVM_VERSION>${graalvm.sdk.version}</GRAALVM_VERSION>
                                            <GRAALVM>true</GRAALVM>
                                        </args>
                                    </build>
                                </image>
                            </images>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
