<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean name="mailSettingsValidator" class="org.jahia.modules.serversettings.flow.validator.MailSettingsValidator"/>
    
    <bean class="org.jahia.modules.serversettings.portlets.ManagePortletsAction" />

    <bean name="preparedPortletsController" class="org.jahia.modules.serversettings.portlets.PreparedPortletsController"/>
    <bean name="serverSettingsMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="urlMap">
            <map>
                <entry key="/preparedportlets" value-ref="preparedPortletsController"/>
            </map>
        </property>
    </bean>

</beans>