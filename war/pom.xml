    <build>
        <finalName>jahia</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <configuration>
                    <warSourceExcludes>*Resources*.properties</warSourceExcludes>
                    <webResources>
                        <resource>
                          <directory>${project.build.directory}/native2ascii</directory>
                          <targetPath>WEB-INF/classes</targetPath>
                        </resource>
                        <resource>
                            <directory>${pom.basedir}/src/main/webapp</directory>
                            <filtering>true</filtering>
                            <includes>
                                <include>WEB-INF/ibm-web-bnd.xmi</include>
                            </includes>
                        </resource>
                    </webResources>
                    <archive>
                        <manifest>
                            <addClasspath>false</addClasspath>
                            <!--classpathPrefix>lib/</classpathPrefix-->
                            <!--addExtensions>true</addExtensions-->
                        </manifest>
                    </archive>
                </configuration>                   
            </plugin>

            <plugin>
                <groupId>org.jahia.server</groupId>
                <artifactId>jahia-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-templates</id>
                        <phase>process-classes</phase>
                        <goals>
                            <goal>copy-templates</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>native2ascii</id>
                        <goals>
                            <goal>native2ascii</goal>
                        </goals>
                        <configuration>
                            <encoding>ISO-8859-1</encoding>
                            <includes>*Resources*.properties</includes>
                            <defaultPropertiesFileLocale>en</defaultPropertiesFileLocale>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>${antrun.plugin.version}</version>
                <dependencies>
                    <dependency>
                        <groupId>org.hibernate</groupId>
                        <artifactId>hibernate-core</artifactId>
                        <version>${hibernate.version}</version>
                    </dependency>
                    <dependency>
                        <groupId>org.hibernate</groupId>
                        <artifactId>hibernate-tools</artifactId>
                        <version>3.2.3.GA</version>
                    </dependency>
                    <dependency>
                        <groupId>org.slf4j</groupId>
                        <artifactId>slf4j-log4j12</artifactId>
                        <version>1.5.11</version>
                    </dependency>
                    <dependency>
                        <groupId>org.jahia.server</groupId>
                        <artifactId>jahia-impl</artifactId>
                        <version>${project.version}</version>
                    </dependency>
                </dependencies>
                <executions>
                    <execution>
                        <id>gwt-i18n-resources</id>
                        <phase>process-classes</phase>
                        <configuration>
                            <tasks>
                                <java classname="org.jahia.ajax.gwt.utils.GWTDictionaryBuilder">
                                    <arg value="JahiaInternalResources" />
                                    <arg value="de,en,es,fr,it,pt" />
                                    <arg value="${project.build.directory}/${project.build.finalName}/gwt/resources/i18n" />
                                    <arg value="messages" />
                                    <arg value="true" /><!-- minified -->
                                    <classpath>
                                        <path refid="maven.runtime.classpath" />
                                    </classpath>
                                </java>
                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>delete-gwt-temp</id>
                        <phase>process-classes</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <tasks>
                                <echo message="Deleting unused/duplicate resources..." />
                                 in resources folder, delete GWT specific files (*.cache.*, *.nocache.*, *.rpc)
                                <delete includeemptydirs="true" failonerror="false">
                                    <fileset dir="${project.build.directory}/${project.build.finalName}/gwt/resources/" includes="**/*.cache.*,**/*.nocache.*,**/*.rpc" />
                                </delete>
                                 delete duplicated resources , DO NOT delete GWT specific files (*.cache.*, *.nocache.*, *.rpc) and resources folder
                                <delete includeemptydirs="true" failonerror="false">
                                    <fileset dir="${project.build.directory}/${project.build.finalName}/gwt/" includes="**/*" excludes="**/*.cache.*,**/*.nocache.*,**/*.rpc,resources/**,**/hosted.html" />
                                </delete>
                                <echo message="...done" />
                            </tasks>
                        </configuration>
                    </execution>
                    <!--
                    <execution>
                        <id>merge-css</id>
                        <phase>process-classes</phase>
                        <configuration>
                            <tasks>
                                <concat destfile="${project.build.directory}/${project.build.finalName}/gwt/resources/css/gwt.css" fixlastline="yes">
                                    <fileset file="${project.build.directory}/${project.build.finalName}/gwt/resources/css/jahia-ext-all.css" erroronmissingdir="false" />
                                    <fileset file="${project.build.directory}/${project.build.finalName}/gwt/resources/css/xtheme-jahia.css" erroronmissingdir="false" />
                                    <fileset file="${project.build.directory}/${project.build.finalName}/gwt/resources/css/edit.css" erroronmissingdir="false" />
                                    <fileset file="${project.build.directory}/${project.build.finalName}/gwt/resources/css/jahia-gwt-engines.css" erroronmissingdir="false" />
                                    <fileset file="${project.build.directory}/${project.build.finalName}/gwt/resources/css/diff.css" erroronmissingdir="false" />
                                </concat>
                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                    -->
                </executions>
            </plugin>
            <plugin>
                <groupId>com.samaxes.maven</groupId>
                <artifactId>maven-minify-plugin</artifactId>
                <version>1.3.5</version>
                <executions>
                    <execution>
                        <phase>process-classes</phase>
                        <goals>
                            <goal>minify</goal>
                        </goals>
                        <configuration>
                            <webappSourceDir>${project.build.directory}/${project.build.finalName}</webappSourceDir>
                            <cssSourceDir>gwt/resources/css</cssSourceDir>
                            <cssSourceFiles>
                                <cssSourceFile>jahia-ext-all.css</cssSourceFile>
                                <cssSourceFile>xtheme-jahia.css</cssSourceFile>
                                <cssSourceFile>edit.css</cssSourceFile>
                                <cssSourceFile>jahia-gwt-engines.css</cssSourceFile>
                                <cssSourceFile>diff.css</cssSourceFile>
                            </cssSourceFiles>
                            <cssTargetDir>gwt/resources/css</cssTargetDir>
                            <cssFinalFile>gwt-1.3.1.css</cssFinalFile>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>

        <resources>
            <resource>
                <directory>src/main/resources</directory>
            </resource>
        </resources>

